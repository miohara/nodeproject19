<% include ../partials/header %>


<div class="row">
 
<div style="text-align: center; width: 100%; background-color: rgba(255, 255, 255, 0.8);text-align: center; margin-bottom: 10px;" >
         
         
    <% res.forEach(function(indOne) {%>     
         <form accept-charset="UTF-8" style="display: inline-block; width: 90%;" action="/editcontact/<%= indOne.id %>" method="post" >    
                <div class="item">
                  
                  <label for="name">Name</label>
                    <input name="name" type="text" value="<%= indOne.name %>" />
                      
                      <label for="comment">Comment</label>
                    <input name="Comment" type="text" value="<%= indOne.Comment %>" />
                   
                   <label for="email">Email</label> 
                    <input name="email" type="text" value="<%= indOne.email %>" />

<button class="button">Edit</button>
          </div>
              </form>
              
              <% }) %>
              
    </div>
  </h1>
</div>



